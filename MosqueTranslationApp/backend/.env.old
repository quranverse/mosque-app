# Mosque Translation App - Environment Configuration
# Generated by setup wizard on 2025-07-17T02:50:20.846Z

# Server Configuration
PORT=8080
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=
# JWT Configuration
JWT_SECRET=
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=
# Alternative SMTP settings (uncomment if Gmail service fails)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# File Upload Configuration
UPLOAD_DIR=./uploads

# Security Configuration
CORS_ORIGIN=*

# Voice Recognition & Translation APIs
# Google Cloud APIs (Primary)
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here
GOOGLE_TRANSLATE_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Microsoft Azure APIs (Backup)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# OpenAI API (Premium Translation)
OPENAI_API_KEY=your_openai_api_key_here

# Munsit API (Arabic Speech Recognition - Default)
MUNSIT_API_KEY=
MUNSIT_SOCKET_URL=https://api.cntxt.tools
MUNSIT_MODEL=munsit-1
VOICE_PROVIDER=munsit

# Audio Recording Configuration
AUDIO_STORAGE_PATH=./audio-recordings
MAX_CONCURRENT_RECORDINGS=10
AUDIO_QUALITY_THRESHOLD=0.7

# External APIs (Optional)
# GEOCODING_API_KEY=your-geocoding-api-key
# PUSH_NOTIFICATION_KEY=your-push-notification-key

# Frontend URL
FRONTEND_URL=http://localhost:5000

# Development Settings
LOG_LEVEL=debug
